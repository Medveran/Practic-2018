	case 14:printf(" чотирнадцять хвилин\n"); break;
	case 15:printf(" п`ятнадцять хвилин\n"); break;
	case 16:printf(" шiстнадцять хвилин\n"); break;
	case 17:printf(" сiмнадцять хвилин\n"); break;
	case 18:printf(" вiсiмнадцять хвилин\n"); break;
	case 19:printf(" дев`ятнадцять хвилин\n"); break;
	case 20:printf(" двадцять хвилин\n"); break;
	case 21:printf(" двадцять одна хвилина\n"); break;
	case 22:printf(" двадцять двi хвилини\n"); break;
	case 23:printf(" двадцять три хвилини\n"); break;
	case 24:printf(" двадцять чотири хвилини\n"); break;
	case 25:printf(" двадцять п`ять хвилин\n"); break;
	case 26:printf(" двадцять шiсть хвилини\n"); break;
	case 27:printf(" двадцять сiм хвилин\n"); break;
	case 28:printf(" двадцять вiсiм хвилин\n"); break;
	case 29:printf(" двадцять дев`ять хвилин\n"); break;
	case 30:printf(" тридцять хвилин\n"); break;
	case 31:printf(" тридцять одна хвилина\n"); break;
	case 32:printf(" тридцять двi хвилини\n"); break;
	case 33:printf(" тридцять три хвилини\n"); break;
	case 34:printf(" тридцять чотири хвилини\n"); break;
	case 35:printf(" тридцять п`ять хвилин\n"); break;
	case 36:printf(" тридцять шiсть хвилин\n"); break;
	case 37:printf(" тридцять сiм хвилин\n"); break;
	case 38:printf(" тридцять вiсiм хвилин\n"); break;
	case 39:printf(" тридцять дев`ять хвилин\n"); break;
	case 40:printf(" сорок хвилин\n"); break;
	case 41:printf(" сорок одна хвилина\n"); break;
	case 42:printf(" сорок двi хвилини\n"); break;
	case 43:printf(" сорок три хвилини\n"); break;
	case 44:printf(" сорок чотири хвилини\n"); break;
	case 45:printf(" сорок п`ять хвилин\n"); break;
	case 46:printf(" сорок шiсть хвилин\n"); break;
	case 47:printf(" сорок сiм хвилин\n"); break;
	case 48:printf(" сорок вiсiм хвилин\n"); break;
	case 49:printf(" сорок дев`ять хвилин\n"); break;
	case 50:printf(" п`ятдесят хвилин\n"); break;
	case 51:printf(" п`ятдесят одна хвилина\n"); break;
	case 52:printf(" п`ятдесят двi хвилини\n"); break;
	case 53:printf(" п`ятдесят три хвилини\n"); break;
	case 54:printf(" п`ятдесят чотири хвилини\n"); break;
	case 55:printf(" п`ятдесят п`ять хвилин\n"); break;
	case 56:printf(" п`ятдесят шiсть хвилин\n"); break;
	case 57:printf(" п`ятдесят сiм хвилин\n"); break;
	case 58:printf(" п`ятдесят вiсiм хвилин\n"); break;
	case 59:printf(" п`ятдесят дев`ять хвилин\n"); break;
	default:break;
	}
}
